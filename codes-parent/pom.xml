		<!-- 统一插件配置声明 -->
		<pluginManagement>
			<plugins>
				<!-- resources -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-resources-plugin</artifactId>
					<version>${org.apache.maven.plugins.resources.version}</version>
				</plugin>

				<!-- compiler -->
